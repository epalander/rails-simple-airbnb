<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

<div class="card-container">

    <% @flats.each_with_index do |flat, index| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <div class="flex">
          <p><i class="fas fa-coins "></i> <%= flat.price_per_night   %>
          <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>

      </div>
      </div>
    </div>
    <% end %>

</div>

</div>
